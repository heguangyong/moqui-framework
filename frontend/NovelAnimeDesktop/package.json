{
  "name": "novel-anime-desktop",
  "version": "1.0.0",
  "description": "小说动漫生成器 - 独立桌面应用",
  "main": "src/main/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "electron src/main/main.js",
    "dev:renderer": "vite",
    "build": "npm run build:renderer && npm run build:main",
    "build:main": "echo 'Main process ready'",
    "build:renderer": "vite build",
    "dist": "npm run build && electron-builder",
    "start": "electron ."
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.0.0",
    "concurrently": "^8.0.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "vite": "^5.0.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "lucide-vue-next": "^0.561.0",
    "pinia": "^2.1.0",
    "sass": "^1.97.0",
    "uuid": "^9.0.0",
    "vue": "^3.3.0",
    "vue-router": "^4.2.0"
  },
  "build": {
    "appId": "com.novelanime.desktop",
    "productName": "小说动漫生成器",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/main/**/*",
      "dist-renderer/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    }
  }
}
