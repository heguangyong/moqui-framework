{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Novel",
  "scopeName": "text.novel",
  "patterns": [
    {
      "include": "#chapter-title"
    },
    {
      "include": "#character-name"
    },
    {
      "include": "#dialogue"
    },
    {
      "include": "#scene-description"
    },
    {
      "include": "#comments"
    }
  ],
  "repository": {
    "chapter-title": {
      "patterns": [
        {
          "name": "markup.heading.1.novel",
          "match": "^\\s*(第.+章.*)$",
          "captures": {
            "1": {
              "name": "entity.name.section.novel"
            }
          }
        }
      ]
    },
    "character-name": {
      "patterns": [
        {
          "name": "entity.name.character.novel",
          "match": "^\\s*([\\u4e00-\\u9fff\\w]+)：",
          "captures": {
            "1": {
              "name": "variable.other.character.novel"
            }
          }
        }
      ]
    },
    "dialogue": {
      "patterns": [
        {
          "name": "string.quoted.double.novel",
          "begin": """,
          "end": """,
          "patterns": [
            {
              "name": "constant.character.escape.novel",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.novel",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.novel",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.other.novel",
          "begin": "「",
          "end": "」",
          "patterns": [
            {
              "name": "constant.character.escape.novel",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "scene-description": {
      "patterns": [
        {
          "name": "comment.block.scene.novel",
          "begin": "\\[",
          "end": "\\]",
          "patterns": [
            {
              "name": "keyword.control.scene.novel",
              "match": "(场景|镜头|特写|远景|近景|切换)"
            }
          ]
        }
      ]
    },
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.novel",
          "begin": "//",
          "end": "$"
        },
        {
          "name": "comment.block.novel",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    }
  }
}